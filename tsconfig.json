{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react", 
    "esModuleInterop": true, 
    "strict": true, 
    "moduleResolution": "node", 
    "isolatedModules": true, 
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"]
}
